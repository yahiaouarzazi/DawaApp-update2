    </div>
    <% articlesFourn.forEach( articleFourn => { %>  
        <div class="card mt-2 mb-4 w-50 text-center mx-auto shadow">
            <div class="card-body">
               <h4 class="card-title">Nom: <%= articleFourn.nomF %> prénom: <%= articleFourn.prénom %></h4> 
               <div class="card-subtitle text-muted mb-2">Date entrée système: <%= articleFourn.createdAt.toLocaleDateString() %></div>
               <div class="card-text mb-2">Companie: <%= articleFourn.companie %></div>
               <div class="card-text mb-2">Email: <%= articleFourn.émail %></div>
               <a href="articlesFourn/<%= articleFourn.id %>" class="btn btn-primary">Plus d'infos<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle ml-2" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M8.93 6.588l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588z"/>
                <circle cx="8" cy="4.5" r="1"/>
              </svg></a>
               <form action="/articlesFourn/<%= articleFourn.id %>?_method=DELETE" method="POST" class="d-inline" >
                 <button type="submit" class="btn btn-danger">Supprimer<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash ml-2" viewBox="0 0 16 16">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
